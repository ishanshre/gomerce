{{define "base"}}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="csrf_token" content="{{.CSRFToken}}">
    {{with .Error}}
    <meta name="message" content="{{.}}">
    <meta name="type" content="error">
    {{end}}
    {{with .Flash}}
    <meta name="message" content="{{.}}">
    <meta name="type" content="flash">
    {{end}}
    {{with .Warning}}
    <meta name="message" content="{{.}}">
    <meta name="type" content="warning">
    {{end}}

    {{block "meta" .}}

    {{end}}


    <title>{{block "title" .}}{{end}}</title>

    {{block "css" .}}

    {{end}}
    <script src="/static/js/htmx.min.js"></script>
    <link rel="stylesheet" href="/static/css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <script src="/static/js/jquery.min.js"></script>
</head>

<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <div class="header_img"> <img src="/static/images/profile.jpg" alt=""> </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div> <a href="#" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span
                        class="nav_logo-name">Gomerce</span> </a>
